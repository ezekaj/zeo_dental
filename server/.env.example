# Gemini API Key (required)
GEMINI_API_KEY=your_gemini_api_key_here

# Database URL (auto-set by Fly Postgres in production)
DATABASE_URL=postgresql://localhost:5432/zeo_dental

# Server Configuration (optional)
PORT=3000
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info

# Admin/Receptionist Access
ADMIN_TOKEN=your_secure_admin_token_here

# WhatsApp Business API (Meta Cloud API)
# Get these from https://developers.facebook.com/apps → Your App → WhatsApp → API Setup
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token

# SMTP Email Configuration
# Example for Gmail: Use App Password (not regular password)
# Enable 2FA, then create App Password at https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
MAIL_FROM=noreply@zeodental.com
